{
  "name": "smart-campaign",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:bff\" \"npm run dev:api\"",
    "dev:frontend": "next dev",
    "dev:bff": "tsx watch bff/server.ts",
    "dev:api": "tsx watch api/server.ts",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:bff\" \"npm run start:api\"",
    "start:frontend": "next start",
    "start:bff": "node dist/bff/server.js",
    "start:api": "node dist/api/server.js",
    "lint": "next lint",
    "db:setup": "psql -d $DATABASE_URL -f database/schema.sql",
    "db:seed": "psql -d $DATABASE_URL -f database/seed.sql",
    "db:reset": "psql -d $DATABASE_URL -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && npm run db:setup && npm run db:seed"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@hookform/resolvers": "^3.3.2",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "connect-pg-simple": "^9.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.9.7",
    "papaparse": "^5.4.1",
    "pg": "^8.11.3",
    "postcss": "^8.4.32",
    "react": "^18",
    "react-dom": "^18",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.8.0",
    "tailwindcss": "^3.3.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.2",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "tsx": "^4.6.2",
    "typescript": "^5"
  }
}
